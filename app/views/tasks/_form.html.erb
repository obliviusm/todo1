<h3>Form for task</h3>

<%= form_for [ @project, @task ], html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
    <%= f.label :name, "Your goal ", class: "col-lg-2 control-label" %>
    <%= f.text_field :name, class: "form-control" %>
	</div>

    <div class="form-group">
    <%= f.label :deadline, "The very last day ", class: "col-lg-2 control-label"  %>
    <%= f.date_field :deadline, class: "form-control" %>
	</div>

    <div class="form-group">
    <%= f.label :status, "Done?", class: "col-lg-2 control-label"  %>
    <%= f.check_box :status %>
	</div>

    <div class="form-group col-lg-offset-2 col-lg-10">
    <%= f.submit 'Submit', class: "btn btn-success" %>
	</div>
<% end %>