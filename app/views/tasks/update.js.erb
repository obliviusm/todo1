<% if @task1.valid? %>
    $('#<%= dom_id(@task1) %>').replaceWith("<%= escape_javascript( render partial: 'projects/task', object: @task1 ) %>");
    $('#<%= dom_id(@project) %>').find(".add_task").html("").
        append("<%= escape_javascript( render partial: 'form' ) %>");
<% else %>
    $('#<%= dom_id(@project) %>').find(".add_task").find(':text').effect('highlight');
<% end %>